{
  "manifest_version": 2,

  "name": "VSO Clicker",
  "description": "Click the vso complete pull request button when all are green",
  "version": "1.0",

  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*.visualstudio.com/*"],
    "js": ["jquery-1.11.3.min.js", "content.js"]
  }],
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}